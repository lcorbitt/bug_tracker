<%= form_for([@project, @ticket, @comment]) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <p class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Write</p>
    </div>
  </nav>

  <div class="tab-content mb-2" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="field form-group mt-3">
        <%= form.text_area :message, placeholder: "Leave a comment", class: "form-control", rows: 4 %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.hidden_field :commented_on_id, value: @ticket.id %>
  </div>

  <div class="float-right">
    <%= form.submit 'Comment', class: "btn btn-success" %>
  </div>
<% end %>
