<div class="bg-light border-right" id="sidebar-wrapper">
  <div class="sidebar-heading">
    <%= image_tag('bug_tracker_logo.svg') %>
    Bug Tracker
  </div>
  <div class="list-group list-group-flush">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", dashboard_index_path, class: "list-group-item list-group-item-action bg-light" %>
      <% if current_user.admin? %>
        <%= link_to "Manage Roles", admin_users_path, class: "list-group-item list-group-item-action bg-light" %>
        <%= link_to "Manage Project Users", '#', class: "list-group-item list-group-item-action bg-light" %>
      <% end %>
      <%= link_to "My Projects", projects_path, class: "list-group-item list-group-item-action bg-light" %>
      <%= link_to "My Tickets", '#', class: "list-group-item list-group-item-action bg-light" %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "list-group-item list-group-item-action bg-light" %>
    <% else %>
      <%= link_to 'Sign Up', new_user_registration_path, class: "list-group-item list-group-item-action bg-light" %>
      <%= link_to 'Sign In', new_user_session_path, class: "list-group-item list-group-item-action bg-light" %>
    <% end %>
  </div>
</div>
